{% extends 'CostoSystemBundle::layout.html.twig' %}
{% block title %}Gesti√≥n Costos{% endblock %}
{% block content %}
<h1>Editar una Venta</h1>

<form action="{{ path('update_venta', { 'id': venta.IdVenta }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
        <button class="symfony-button-green" type="submit">Editar</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a class="symfony-button-green" href="{{ path('index_venta') }}">
            Volver al listado
        </a>
    </li>
    <li>
        <form action="{{ path('delete_venta', { 'id': venta.IdVenta }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button class="symfony-button-green" type="submit">Borrar Venta</button>
        </form>
    </li>
</ul>
{% endblock %}
