{% extends 'CostoSystemBundle::layout.html.twig' %}

{% block content %}
{% block title %}Modificar el Gasto {{ gasto.NombreGasto }}{% endblock %}

<h1>{{ block('title') }}</h1>

<form action="{{ path('update_gasto', { 'id':gasto.IdGasto }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
        <button class="boton" type="submit">Guardar cambios</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('index_gasto') }}">
            Volver al listado
        </a>
    </li>
    <li>
        <form action="{{ path('delete_gasto', { 'id': gasto.IdGasto }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Borrar Gasto</button>
        </form>
    </li>
</ul>
{% endblock %}